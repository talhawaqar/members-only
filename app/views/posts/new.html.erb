<% def msg(status) return "#{status}" end %>
<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-body">
    <h2>Create a Post</h2>
    <%= form_for @post do |f| %>
      <%= form_group_for f, :title, label: false  do %>
        <div class="input-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: 'form-control', placeholder: 'UserName' %>
        </div>
      <% end %>
      <%= form_group_for f, :body, label: false  do %>
        <div class="input-group">
          <%= f.label :body %><br>
          <%= f.text_area :body, class: 'form-control', placeholder: 'Write You Post' %>
        </div>
      <% end %>                  
      <%= f.submit("Post", class:"btn btn-primary") %>
    <% end %>
  </div>    
</div>